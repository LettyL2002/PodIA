{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "PodIA - RUN and Open Browser",
      "type": "shell",
      "command": "poetry",
      "args": ["run", "python", "./.vscode/run_server.py"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": ["PodIA - Run Tests"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "PodIA - RUN",
      "type": "shell",
      "command": "poetry",
      "args": ["run", "python", "podia.py"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOrder": "parallel",
      "dependsOn": ["PodIA - Run Tests", "PodIA - Open Browser"],
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Activate Virtual Environment",
      "type": "shell",
      "command": "Invoke-Expression",
      "args": ["(poetry env activate)"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "dependsOn": ["PodIA - Install Requirements"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "PodIA - Install Requirements",
      "type": "shell",
      "command": "poetry",
      "args": ["install"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "PodIA - Run Tests",
      "type": "shell",
      "command": "poetry",
      "args": ["run", "pytest", "--maxfail=1", "--disable-warnings"],
      "dependsOn": ["Activate Virtual Environment"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
